.account-page
  .account-page__inner
    .account-page__inner__left
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'account-page__inner__left__btn'
      = link_to "トップページに戻る", :back, class: 'account-page__inner__left__btn'
    .account-page__inner__right
      = form_for(current_user) do |f|
        .account-page__inner__right__field
          .account-page__inner__right__field__label
            = f.label :name
          .account-page__inner__right__field__input
            = f.text_field :name, autofocus: true
        .account-page__inner__right__field
          .account-page__inner__right__field__label
            = f.label :email
          .account-page__inner__right__field__input
            = f.email_field :email
        .account-page__inner__right__actions
          = f.submit "Update", class: 'account-page__inner__right__actions__btn'
